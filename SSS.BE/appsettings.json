{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=SSSBE;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyThatShouldBeAtLeast32CharactersLongForSecurity!",
    "Issuer": "SSS.BE",
    "Audience": "SSS.BE.Users",
    "ExpiryInHours": "24",
    "RefreshTokenExpiryInDays": "30"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "SSS.BE.Infrastructure.Middleware": "Information",
      "SSS.BE.Services.Security": "Information",
      "SSS.BE.Infrastructure.Auth.JwtTokenService": "Information"
    }
  },
  "RateLimit": {
    "MaxRequests": 300,
    "TimeWindowMinutes": 1
  },
  "RequestValidation": {
    "MaxRequestSize": 10485760,
    "MaxHeaderValueLength": 4096,
    "MaxQueryParameterLength": 2048,
    "MaxQueryStringLength": 8192,
    "RequireContentTypeHeader": false
  },
  "Security": {
    "AntiSpam": {
      "MaxRequestsPerMinutePerIP": 400,
      "MaxRequestsPerMinutePerUser": 600,
      "MaxDuplicateRequestsPerHour": 20,
      "BlockDurationMinutes": 5,
      "EnableDatabaseLogging": true,
      "QuickDetectionThreshold": 500,
      "QuickDetectionWindowMinutes": 2
    },
    "DuplicatePrevention": {
      "EnableHashValidation": true,
      "RetentionDays": 90,
      "MaxDuplicateAttemptsPerHour": 15,
      "BlockAfterAttempts": 10
    },
    "Audit": {
      "EnableFullAuditTrail": true,
      "RetentionDays": 365,
      "HighRiskRetentionDays": 2555,
      "LogSensitiveData": false,
      "AlertOnSuspiciousActivity": true
    }
  },
  "Database": {
    "Optimization": {
      "EnableAutoOptimization": true,
      "OptimizationSchedule": "0 3 * * *",
      "CleanupSchedule": "0 2 * * *",
      "RetentionPolicies": {
        "RequestLogs": 30,
        "DuplicateDetectionLogs": 90,
        "AuditLogsLowRisk": 365,
        "AuditLogsHighRisk": 2555,
        "WorkShiftsInactive": 730,
        "UserTokensExpired": 7
      }
    },
    "Performance": {
      "CommandTimeout": 30,
      "MaxRetryCount": 3,
      "MaxRetryDelay": 5,
      "EnableSensitiveDataLogging": false
    }
  },
  "Middleware": {
    "EnableRequestLogging": true,
    "EnablePerformanceMonitoring": true,
    "EnableRateLimiting": true,
    "EnableRequestValidation": true,
    "EnableSpamPrevention": true
  },
  "AllowedHosts": "*"
}
